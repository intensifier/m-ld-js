  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "outDir": "ext"
  },
  "include": [
    "src/**/*"
  ]
}